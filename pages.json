{
  "style": {
    "app-plus": {
      "style": "uview-ui/css/uview-ui.css"
    }
  },
  "easycom": {
    "^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "backgroundTextStyle": "dark",
        "enablePullDownRefresh": true,
        "navigationStyle": "custom",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/user-login/user-login",
      "style": {
        "navigationBarTitleText": "用户登录",
        "navigationBarBackgroundColor": "#025BFF",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/category/category",
      "style": {
        "navigationBarTitleText": "分类商品",
        "navigationBarBackgroundColor": "#025BFF",
        "navigationBarTextStyle": "white",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/user/user",
      "style": {
        "navigationBarTitleText": "个人中心",
        "navigationBarBackgroundColor": "#025BFF",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/basket/basket",
      "style": {
        "navigationBarTitleText": "视频",
        "navigationBarBackgroundColor": "#025BFF",
        "navigationBarTextStyle": "white"
      }
    }
  ],
  "subPackages": [
    // 退款分包
    {
      "root": "pages/package-refund",
      "pages": [
        {
          "path": "pages/apply-refund/apply-refund",
          "style": {
            "navigationBarTitleText": "申请退款",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        }
      ]
    },
    // 用户分包
    {
      "root": "pages/package-user",
      "pages": [
        {
          "path": "pages/order-list/order-list",
          "style": {
            "navigationBarTitleText": "订单列表",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/order-detail/order-detail",
          "style": {
            "navigationBarTitleText": "订单详情",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/terms-page/terms-page",
          "style": {
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/card-package/card-package",
          "style": {
            "navigationBarTitleText": "我的卡包",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/coupon/coupon",
          "style": {
            "navigationBarTitleText": "我的优惠券",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/delivery-address/delivery-address",
          "style": {
            "navigationBarTitleText": "地址管理",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/edit-address/edit-address",
          "style": {
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/account-settings/account-settings",
          "style": {
            "navigationBarTitleText": "账户设置",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/personal-information/personal-information",
          "style": {
            "navigationBarTitleText": "账户设置",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/login-success/login-success",
          "style": {
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        }
      ]
    },
    // 支付分包
    {
      "root": "pages/package-pay",
      "pages": [
        {
          "path": "pages/pay-index/pay-index",
          "style": {
            "navigationBarTitleText": "提交订单",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/pay-result/pay-result",
          "style": {
            "backgroundTextStyle": "light"
          }
        },
        {
          "path": "pages/pay-success/pay-success",
          "style": {
            "backgroundTextStyle": "dark",
            "navigationBarBackgroundColor": "#ffffff",
            "navigationBarTextStyle": "black"
          }
        }
      ]
    },
    // 团长分包
    {
      "root": "pages/package-leader",
      "pages": [
        {
          "path": "pages/apply-leader/apply-leader",
          "style": {
            "navigationBarTitleText": "申请成为团长",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/leader-index/leader-index",
          "style": {
            "navigationBarTitleText": "团长管理",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/withdrawal/withdrawal",
          "style": {
            "navigationBarTitleText": "提现",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/take-notes/take-notes",
          "style": {
            "navigationBarTitleText": "提现记录",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/my-friends/my-friends",
          "style": {
            "navigationBarTitleText": "我的好友",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/user-shop-details/user-shop-details",
          "style": {
            "navigationBarTitleText": "用户购物明细",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        }
      ]
    },
    // 会员中心分包
    {
      "root": "pages/package-member-integral",
      "pages": [
        {
          "path": "pages/member-center/member-center",
          "style": {
            "navigationBarTitleText": "会员中心",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "pages/integral-index/integral-index",
          "style": {
            "navigationBarTitleText": "青春豆中心",
            "enablePullDownRefresh": false
          }
        }
      ]
    },
    // 商品详情分包
    {
      "root": "pages/package-prod",
      "pages": [
        {
          "path": "pages/prod/prod",
          "style": {
            "navigationBarTitleText": "商品详情",
            "navigationBarBackgroundColor": "#025BFF",
            "navigationBarTextStyle": "white"
          }
        }
      ]
    }
  ],
  "tabBar": {
    "selectedColor": "#005AFF",
    "color": "#999999",
    "iconWidth": "18px",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "/static/tabbar/uncheck-home.png",
        "selectedIconPath": "/static/tabbar/selected-home.png"
      },
      {
        "pagePath": "pages/category/category",
        "text": "分类",
        "iconPath": "/static/tabbar/uncheck-classify.png",
        "selectedIconPath": "/static/tabbar/selected-classify.png"
      },
      {
        "pagePath": "pages/basket/basket",
        "text": "视频",
        "iconPath": "/static/tabbar/uncheck-video.png",
        "selectedIconPath": "/static/tabbar/selected-video.png"
      },
      {
        "pagePath": "pages/user/user",
        "text": "我的",
        "iconPath": "/static/tabbar/uncheck-center.png",
        "selectedIconPath": "/static/tabbar/selected-center.png"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "uniIdRouter": {}
}
